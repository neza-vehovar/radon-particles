tosca_definitions_version: tosca_simple_yaml_1_3

policy_types:
  radon.policies.testing.LoadTest:
    derived_from: radon.policies.testing.TestCase
    properties:
      repeats:
        type: string
        required: true
        status: supported
      lower_bound:
        type: string
        required: true
        status: supported
      threads:
        type: string
        required: true
        default: "5"
        status: supported
      upper_bound:
        type: string
        required: true
        status: supported
    metadata:
      abstract: "false"
      final: "false"
    targets: [ tosca.nodes.SoftwareComponent ]
